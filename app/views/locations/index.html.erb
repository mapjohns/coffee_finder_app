<h1><%= store_name %></h1>
<ul>
<% @locations.each do |location| %>
    <li>
        Street: <%= location.street %><br>
        City: <%= location.city %><br>
        State: <%= location.state %><br>
        Zip Code: <%= location.zip_code %>
    </li><br>
<% end %>
</ul>

<% if params[:store_id] %>
<h3>Missing Location? Please add it below:</h3>
<div id="c_location">
<%= form_for @location do |f| %>
    <%= f.hidden_field :store_id, :value => params[:store_id] %>
    <%= f.label :street %>
    <%= f.text_field :street %><br>
    <%= f.label :city %>
    <%= f.text_field :city %><br>
    <%= f.label :state %>
    <%= f.text_field :state %><br>
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %><br><br>
    <%= f.submit %>
<% end %>
</div>
<% end %>