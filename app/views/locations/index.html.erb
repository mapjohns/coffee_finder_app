<h1><%= store_name %></h1>
<ul>
<% @locations.each do |location| %>
    <li>
        Street: <%= location.street %><br>
        City: <%= location.city %><br>
        State: <%= location.state %><br>
        Zip Code: <%= location.zip_code %>
    </li><br>
<% end %>
</ul>

<% if params[:store_id] %>
<h3>Missing Location? You can add it <%= link_to "here", new_store_location_path(@store) %></h3>
<% end %>